/* pages/orderPreview/orderPreview.wxss */
.page {
  box-sizing: border-box;
  padding: 20rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
}

.address-card {
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  background-color: white;
  border-radius: 20rpx;
  border-left: 10rpx solid #3b82f6;
}

.address-card-content {
  max-width: 80%;
  padding: 30rpx;
  padding-right: 0;
}

.address-card-nocontent {
  padding: 30rpx 0;
  color: var(--gray-600);
}

.address-card-text-title {
  font-size: 1.125rem;
  margin-bottom: 5rpx;
}

.address-card-text-detail {
  font-size: .875rem;
}

.address-card-icon {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  transition: background-color .2s ease-in-out;
}

.address-card-icon:active {
  background-color: var(--blue-50);
}

.address-card-icon-text {
  color: var(--gray-400);
  font-size: 1.25rem;
}

.cart-list {
  margin: 10rpx;
  margin-top: 20rpx;
}

.cart-book-wrapper {
  overflow: hidden;
  background-color: white;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}

.cart-book-content {
  box-sizing: border-box;
  width: 100%;
  display: inline-flex;
  padding: 20rpx 30rpx;
}

.cart-book-cover {
  width: 25%;
}

.cart-book-content-left,
.cart-book-content-right {
  display: flex;
  font-size: .875rem;
}

.cart-book-content-left {
  flex: 1;
  justify-content: space-around;
  flex-direction: column;
}

.cart-book-content-right {
  align-items: center;
}

.cart-book-price {
  font-weight: 700;
  color: var(--red-500);
}

.cart-book-num {
  font-size: .75rem;
  color: var(--gray-500);
}