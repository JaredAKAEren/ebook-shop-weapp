/**index.wxss**/
.swiper-image {
  width: 100%;
  height: 100%;
}

.books-wrapper {
  margin: 20rpx 0;
}

.book-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.book-content{
  border-radius: 15rpx;
  border: none;
}

.book-image {
  min-width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 5rpx 20rpx;
  margin-bottom: 30rpx;
}

.book-title {
  font-size: 0.875rem;
  margin-bottom: 20rpx;
}

.book-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-info > text {
  margin: 0 20rpx;
  font-size: 0.875rem;
}

.book-price {
  color: var(--red-600);
  font-weight: 600;
}

.book-info > .book-sales {
  font-size: 0.75rem;
  color: var(--gray-400);
}

.loading {
  text-align: center;
  padding-bottom: 25rpx;
}

.no-data {
  padding: 0 25rpx;
  padding-bottom: 25rpx;
}

.back-top {
  background-color: var(--blue-50);
  position: fixed;
  z-index: 10;
  right: 30rpx;
  bottom: 30rpx;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  border-radius: 100%;
  border: 10rpx solid var(--blue-100);
  display: flex;
  justify-content: center;
  align-items: center;
  transition: border-color 0.1s ease-in-out;
}

.back-top:active {
  border-color: var(--blue-300);
}

.back-top-icon {
  width: 0;
  height: 0;
  margin-top: -4rpx;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid transparent;
  border-bottom: 18rpx solid var(--blue-500);
}
