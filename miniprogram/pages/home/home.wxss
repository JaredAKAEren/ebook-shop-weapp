/**index.wxss**/
.container {
  background-color: var(--gray-100);
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.books-wrapper {
  margin: 10rpx 0;
}

.book-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
}

.book-card-1 {
  margin: 15rpx 15rpx 15rpx 30rpx;
}

.book-card-0 {
  margin: 15rpx 30rpx 15rpx 15rpx;
}

.book-image {
  width: 100%;
  min-height: 50%;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.book-title {
  font-size: .875rem;
  margin-bottom: 20rpx;
}

.book-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-info>text {
  margin: 0 20rpx;
  font-size: .875rem;
}

.book-price {
  color: var(--red-600);
  font-weight: 600;
}

.book-info>.book-sales {
  font-size: .75rem;
  color: var(--gray-400);
}

.loading {
  text-align: center;
  padding-bottom: 25rpx;
}

.no-data {
  padding: 0 25rpx;
  padding-bottom: 25rpx;
}

.back-top {
  background-color: var(--green-50);
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  border-radius: 100%;
  border: 10rpx solid var(--green-100);
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-top:active {
  border-color: var(--green-300);
}

.back-top-icon {
  width: 0;
  height: 0;
  margin-top: -4rpx;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid transparent;
  border-bottom: 18rpx solid var(--green-500);
}