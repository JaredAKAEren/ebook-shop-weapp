/* pages/register/register.wxss */
.page {
  padding: 30rpx;
}

.register-header {
  background-color: white;
  border-radius: 10rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
}

.register-header-title {
  width: 100%;
  text-align: center;
  font-size: 2rem;
  font-weight: bold;
}

.register-header-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
}

.register-header-desc navigator {
  color: var(--blue-600);
}

.register-form {
  overflow: hidden;
  border-radius: 10rpx;
}

.register-button {
  overflow: hidden;
  position: relative;
  margin-top: 30rpx;
  border-radius: 10rpx;
  color: white;
  text-align: center;
  padding: 20rpx 0;
  letter-spacing: 0.1em;
  background-image: var(--bg-blue-gradient);
}

.register-button>.text {
  position: relative;
  z-index: 1;
}

.register-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: var(--bg-blue-gradient-active);
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
}

.register-button:active::before {
  opacity: 1;
}

.wechat-register-button {
  position: relative;
  margin-top: 30rpx;
  border-radius: 10rpx;
  color: white;
  text-align: center;
  padding: 20rpx 0;
  letter-spacing: 0.1em;
  background-color: var(--green-500);
  transition: background-color 0.2s ease-in-out;
}

.wechat-register-button:active {
  background-color: var(--green-600);
}